<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/blueTrack" />
            <!--membuat lengkungan pada background-->
            <corners android:radius="@dimen/_100sdp" />
            <!--membuat border pada background-->
            <stroke android:width="@dimen/_1sdp"
                android:color="@android:color/white" />
            <size android:height="@dimen/_20sdp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/greyColor" />
            <corners android:radius="@dimen/_100sdp" />
            <stroke android:width="@dimen/_1sdp"
                android:color="@android:color/black" />
            <size android:height="@dimen/_20sdp" />
        </shape>
    </item>
</selector>
